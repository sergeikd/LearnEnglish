<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Learn English</title>
    <link href="~/Content/video-js.min.css" rel="stylesheet">
    <link href="~/Content/videojs.record.min.css" rel="stylesheet">
    <link href="~/Content/videojs-bug.css" rel="stylesheet">

    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/lib/video.min.js"></script>
    <script src="~/Scripts/lib/RecordRTC.js"></script>
    <script src="~/Scripts/lib/adapter-latest.js"></script>
    <script src="~/Scripts/lib/wavesurfer.min.js"></script>
    <script src="~/Scripts/lib/wavesurfer.microphone.min.js"></script>
    <script src="~/Scripts/lib/videojs.wavesurfer.min.js"></script>
    <script src="~/Scripts/lib/videojs.record.min.js"></script>
    <script src="~/Scripts/lib/videojs-bug.js"></script>

    <style>
        #micRecorder {
            background-color: #EEE;
        }

        body {
            font-weight: 300;
        }

        /* change player background color */
        #myPlayback {
            background-color: #AE57B3;
        }

        select {
            margin: 0 0 0.5em 0;
        }

        .outputSelector {
            margin-top: 30px;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Learn English", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Student", "Index", "Home")</li>
                    <li>@Html.ActionLink("Teacher", "About", "Home")</li>
                    <li>@Html.ActionLink("Settings", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/micRecorder.js"></script>
    @*<script src="~/Scripts/player.js"></script>*@
    <script src="~/Scripts/app.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
