@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Audio Output Example - Wavesurfer Plugin for Video.js</title>
    <link href="//vjs.zencdn.net/6.7.0/video-js.min.css" rel="stylesheet">
    <link href="~/Content/videojs.wavesurfer.min.css" rel="stylesheet">
    <link href="~/Content/videojs-bug.css" rel="stylesheet">
    <script src="//vjs.zencdn.net/6.7.0/video.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/2.0.5/wavesurfer.min.js"></script>
    <script src="~/Scripts/lib/videojs.wavesurfer.min.js"></script>
    <script src="~/Scripts/lib/videojs-bug.js"></script>
    <style>
        body {
            font-weight: 300;
        }

        /* change player background color */
        #myPlayback {
            background-color: #AE57B3;
        }

        select {
            margin: 0 0 0.5em 0;
        }

        .outputSelector {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div>
        <audio id="myPlayback" class="video-js vjs-default-skin"></audio>
    </div>
    <button class="btn btn-primary" onclick="addBug()">
        Add Bug
    </button>
    <script>
        var player = videojs("myPlayback", {
            controls: true,
            width: 600,
            height: 300,
            fluid: false,
            plugins: {
                wavesurfer: {
                    src: '../Content/hal.wav',
                    msDisplayMax: 10,
                    debug: true,
                    waveColor: '#F2E68A',
                    progressColor: 'black',
                    cursorColor: 'black',
                    hideScrollbar: true
                }
            }
        }, function () {
            // print version information at startup
            videojs.log('Using video.js', videojs.VERSION,
                'with videojs-wavesurfer', videojs.getPluginVersion('wavesurfer'));
        });

        function addBug() {
            console.log("time =" + player.wavesurfer().getCurrentTime());
            player.bug({
                height: 50,
                imgSrc: 'http://cdn.teamcococdn.com/image/frame:1/teamcoco_twitter_128x128.png',
                opacity: 0.5,
                padding: '8px',
                position: 'tl',
                width: 50
            });
        }

        player.on('paused', function () {
            console.log('pause!');
        });

        // error handling
        player.on('error', function (error) {
            console.log('error:', error);
        });</script>
</body>
</html>
